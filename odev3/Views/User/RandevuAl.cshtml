<form asp-action="RandevuAl" method="post">
    <input type="hidden" name="kullaniciId" value="@User.Identity.GetUserId()" />

    <label for="barberId">Berber:</label>
    <select id="barberId" name="barberId">
        @foreach (var berber in ViewBag.Berberler)
        {
            <option value="@berber.Id">@berber.Name</option>
        }
    </select>

    <label for="islemId">İşlem:</label>
    <select id="islemId" name="islemId">
        @foreach (var islem in ViewBag.Islemler)
        {
            <option value="@islem.Id">@islem.Name</option>
        }
    </select>

    <label for="tarihSaat">Tarih ve Saat:</label>
    <input type="datetime-local" id="tarihSaat" name="tarihSaat" required />

    <button type="submit">Randevu Al</button>
</form>
