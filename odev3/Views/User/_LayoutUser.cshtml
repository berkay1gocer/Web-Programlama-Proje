<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kuaför Sistemi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Navbar Özelleştirmesi */
        .navbar-custom {
            background-color: white;
            border-bottom: 2px solid #f4f4f4;
        }

            .navbar-custom .navbar-brand {
                font-size: 2rem;
                color: black;
                font-weight: bold;
            }

            .navbar-custom .navbar-nav .nav-link {
                color: black;
                font-size: 1.2rem;
                padding: 10px 15px;
                text-transform: uppercase;
            }

                .navbar-custom .navbar-nav .nav-link:hover {
                    color: #f39c12;
                }

            .navbar-custom .btn {
                color: white;
                background-color: #f39c12;
                font-size: 1.2rem;
                border: none;
            }

                .navbar-custom .btn:hover {
                    background-color: #e67e22;
                }

        footer {
            background-color: #f4f4f4;
            padding: 20px;
        }
    </style>
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Berber-Kullanıcı Sayfası</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                   
                        <li class="nav-item">
                            <a class="nav-link" asp-action="RandevuAl" asp-controller="User">Randevu Al</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="RandevuYonet" asp-controller="User">Randevu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Logout" asp-controller="User">Çıkış Yap</a>
                        </li>
                  
                    </ul>
                </div>
               
            </div>
        </nav>
    </header>
    <main class="container mt-3">
        @RenderBody()
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
