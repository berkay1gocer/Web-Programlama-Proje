@model User

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h3>Giriş Yap</h3>
                </div>
                <div class="card-body">
                    <form method="post" action="/Account/Login">
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                            <input asp-for="Username" class="form-control" placeholder="E-posta adresinizi girin" required>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <input asp-for="Password" class="form-control" placeholder="Şifrenizi girin" required>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p>Hesabınız yok mu? <a href="/Account/Register">Üye Ol</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
