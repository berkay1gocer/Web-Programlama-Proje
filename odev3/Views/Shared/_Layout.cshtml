<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kuaför Sistemi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Navbar Özelleştirmesi */
        .navbar-custom {
            background-color: white; /* Arka plan beyaz */
            border-bottom: 2px solid #f4f4f4; /* Alt çizgi */
        }

            .navbar-custom .navbar-brand {
                font-size: 2rem; /* Marka yazısı büyük */
                color: black; /* Marka yazısı rengi */
                font-weight: bold;
            }

            .navbar-custom .navbar-nav .nav-link {
                color: black; /* Menü yazı rengi */
                font-size: 1.2rem; /* Menü yazısı büyüklüğü */
                padding: 10px 15px; /* Menü bağlantı boşlukları */
                text-transform: uppercase; /* Yazıları büyük harf yap */
            }

                .navbar-custom .navbar-nav .nav-link:hover {
                    color: #f39c12; /* Üzerine gelince altın rengi */
                }

            .navbar-custom .btn {
                color: white;
                background-color: #f39c12; /* Buton altın renk */
                font-size: 1.2rem;
                border: none;
            }

                .navbar-custom .btn:hover {
                    background-color: #e67e22; /* Hover rengi */
                }
    </style>
</head>
<body>
    <header>
        <!-- Navbar Başlangıcı -->
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <!-- Marka Adı -->
                <a class="navbar-brand" href="/">Berber</a>
                <!-- Navbar Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Navbar Bağlantıları -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/About">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Services">Hizmetlerimiz</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Appointment">Randevu Al</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contact">İletişim</a>
                        </li>
                    </ul>
                </div>
                <!-- Dinamik Kullanıcı İşlemleri -->
                <div class="d-flex">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Kullanıcı giriş yapmışsa -->
                        <a href="/Account/Profile" class="btn me-2">Profil</a>
                        <a href="/Account/Logout" class="btn">Çıkış Yap</a>
                    }
                    else
                    {
                        <!-- Kullanıcı giriş yapmamışsa -->
                        <a href="/Account/Login" class="btn me-2">Giriş Yap</a>
                        <a href="/Account/Register" class="btn">Üye Ol</a>
                    }
                </div>
            </div>
        </nav>
        <!-- Navbar Sonu -->
    </header>
    <main class="container">
        @RenderBody()
    </main>
    <footer class="text-center py-3">
        <p>&copy; 2024 Kuaför Yönetim Sistemi</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
